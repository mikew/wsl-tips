#!/usr/bin/env bash
set -e

SYSTEMD_PID=$(pgrep -f -a "^/lib/systemd/systemd --system-unit=basic.target" | awk '{ print $1 }')

if [ -z "$SYSTEMD_PID" ]; then
  sudo /usr/bin/daemonize \
    /usr/bin/unshare \
      --fork \
      --pid \
      --mount-proc \
      /lib/systemd/systemd \
        --system-unit=basic.target
  # SYSTEMD_PID=$(pgrep -f -a "^/lib/systemd/systemd --system-unit=basic.target" | awk '{ print $1 }')
fi
