#!/usr/bin/env bash

# Shared mounts need to be mounted before systemd starts.
# Also it seems the systemd environment doesn't pick up on any new mounts.
wsl.exe -d Debian -- bash -l -c true

source "$(dirname "$0")/wsl-systemd-env"

sudo /usr/local/bin/wsl-systemd-start
exec "$WSL_SYSTEMD_SHELL" -l